<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/main_bottom"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_alignParentBottom="true"
        android:background="?attr/tab_background_color"
        android:baselineAligned="false"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <Button
                android:id="@+id/btn_choiceness"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/home_bottom_bg"
                android:drawableTop="?attr/tab_choiceness"
                android:onClick="onTabSelect"
                android:paddingTop="8dip"
                android:layout_centerInParent="true"
                android:scaleType="matrix"
                android:text="@string/tab_choice"
                android:textColor="?attr/tab_textcolor"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/iv_choiceness_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:background="?attr/tab_notice"
                android:contentDescription="@string/action_settings"
                android:gravity="center"
                android:visibility="visible" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <Button
                android:id="@+id/btn_pic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/home_bottom_bg"
                android:drawableTop="@drawable/tab_pic"
                android:onClick="onTabSelect"
                android:paddingTop="8dip"
                android:layout_centerInParent="true"
                android:scaleType="matrix"
                android:text="@string/tab_pic"
                android:textColor="?attr/tab_textcolor"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/iv_pic_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:background="?attr/tab_notice"
                android:contentDescription="@string/action_settings"
                android:gravity="center"
                android:visibility="visible" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <Button
                android:id="@+id/btn_nearby"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/home_bottom_bg"
                android:drawableTop="?attr/tab_nearby"
                android:onClick="onTabSelect"
                android:paddingTop="8dip"
                android:layout_centerInParent="true"
                android:scaleType="matrix"
                android:text="@string/tab_nearby"
                android:textColor="?attr/tab_textcolor"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/iv_nearby_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:background="?attr/tab_notice"
                android:contentDescription="@string/action_settings"
                android:gravity="center"
                android:visibility="visible" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <Button
                android:id="@+id/btn_more"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/home_bottom_bg"
                android:drawableTop="?attr/tab_more"
                android:onClick="onTabSelect"
                android:paddingTop="8dip"
                android:scaleType="matrix"
                android:text="@string/tab_more"
                android:textColor="?attr/tab_textcolor"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/iv_moreby_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:background="?attr/tab_notice"
                android:contentDescription="@string/action_settings"
                android:gravity="center"
                android:visibility="visible" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/main_bottom" />

</RelativeLayout>