<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/activity_bg_color"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/item_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dip"
        android:layout_marginRight="6dip"
        android:padding="6dip"
        android:background="@color/list_item_black_color" >

        <ImageView
            android:id="@+id/item_photo"
            android:layout_width="35dip"
            android:layout_height="35dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="5dip"
            android:background="@drawable/user_photo_frame"
            android:contentDescription="@string/app_name"
            android:src="@drawable/user_photo_default" />

        <TextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/item_photo"
            android:drawableLeft="@drawable/man"
            android:drawablePadding="4dip"
            android:gravity="center_vertical"
            android:textColor="@color/item_text_color"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/item_photo"
            android:gravity="center_vertical"
            android:textColor="@color/item_text_color"
            android:textSize="12sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/item_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dip"
        android:layout_marginRight="6dip"
        android:padding="6dip"
        android:background="@color/list_item_black_color" >

        <TextView
            android:id="@+id/item_contents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="14sp" />
    </LinearLayout>

    <com.huanghua.mysecret.view.SupportView
        android:id="@+id/item_bottom"
        android:layout_width="match_parent"
        android:layout_height="28dip"
        android:layout_marginLeft="6dip"
        android:layout_marginRight="6dip"
        android:background="@drawable/item_btn_bg_normal"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/item_support_happy"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:background="@drawable/item_bottom_btn_bg"
            android:clickable="true"
            android:drawableLeft="@drawable/happy_bg"
            android:drawablePadding="8dip"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/item_btn_left_padding"
            android:text="0"
            android:textColor="@color/item_commit_text_color"
            android:textSize="12sp" />

        <View
            android:layout_width="1dip"
            android:layout_height="20dip"
            android:layout_gravity="center_vertical"
            android:background="@drawable/post_item_vertical" />

        <TextView
            android:id="@+id/item_support_cry"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:background="@drawable/item_bottom_btn_bg"
            android:clickable="true"
            android:drawableLeft="@drawable/cry_bg"
            android:drawablePadding="8dip"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/item_btn_left_padding"
            android:text="0"
            android:textColor="@color/item_commit_text_color"
            android:textSize="12sp" />

        <View
            android:layout_width="1dip"
            android:layout_height="20dip"
            android:layout_gravity="center_vertical"
            android:background="@drawable/post_item_vertical" />

        <TextView
            android:id="@+id/item_commit"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:background="@drawable/item_bottom_btn_bg"
            android:clickable="true"
            android:drawableLeft="@drawable/post_coment_bg"
            android:drawablePadding="8dip"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/item_btn_left_padding"
            android:text="0"
            android:textColor="@color/item_commit_text_color"
            android:textSize="12sp" />
    </com.huanghua.mysecret.view.SupportView>

</LinearLayout>