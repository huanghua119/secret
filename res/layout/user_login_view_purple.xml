<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/panel_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="?attr/title_bg_color"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:clickable="true"
            android:gravity="center_vertical"
            android:onClick="onBack"
            android:paddingLeft="15dip"
            android:src="@drawable/back_left_bg"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/my_user"
            android:textColor="@android:color/white"
            android:textSize="18sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/login_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dip"
            android:background="@drawable/password_bg"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dip"
                android:background="@drawable/user_input_bg"
                android:singleLine="true"
                android:inputType="none"
                android:paddingLeft="50dip"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/user_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:background="@drawable/password_input_bg"
                android:inputType="textPassword"
                android:singleLine="true"
                android:paddingLeft="50dip"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <Button
                android:id="@+id/login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:background="@drawable/login_commit_purple"
                android:text="@string/user_login"
                android:textColor="@drawable/text_white_black"
                android:textSize="18sp" />

            <Button
                android:id="@+id/register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/login_commit_purple"
                android:onClick="onRegister"
                android:text="@string/user_register"
                android:textColor="@drawable/text_white_black"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="307dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dip"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <View
                android:layout_width="0dip"
                android:layout_height="1dip"
                android:background="@drawable/other_purple"
                android:layout_gravity="left|center_vertical"
                android:layout_weight="0.2" />
            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:padding="10dip"
                android:layout_weight="0.4"
                android:text="@string/other_login"
                android:singleLine="true"
                android:layout_gravity="center_horizontal|center_vertical"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="16sp" />
             <View
                android:layout_width="0dip"
                android:layout_height="1dip"
                android:background="@drawable/other_purple"
                android:layout_gravity="right|center_vertical"
                android:layout_weight="0.2" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dip"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:visibility="visible" >

            <com.huanghua.mysecret.weibologin.WeiboLoginButton
                android:id="@+id/weibo_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/sina_bg" />

            <ImageView
                android:id="@+id/qq_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dip"
                android:contentDescription="@string/other_login"
                android:background="@drawable/qq_bg" />
        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:id="@+id/user_detail_view"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_marginTop="10dip"
        android:layout_weight="1"
        android:paddingLeft="8dip"
        android:paddingRight="8dip" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/update_head"
                android:layout_width="match_parent"
                android:layout_height="48dip"
                android:layout_marginTop="10dip"
                android:background="?attr/more_up_bg"
                android:clickable="true"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dip"
                    android:gravity="center_vertical"
                    android:text="@string/user_head"
                    android:textColor="?attr/item_text_color"
                    android:textSize="17sp" />

                <ImageView
                    android:id="@+id/user_photo"
                    android:layout_width="35dip"
                    android:layout_height="35dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="24dip"
                    android:background="@drawable/default_icon"
                    android:contentDescription="@string/app_name" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dip"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/near_right" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/update_name"
                android:layout_width="match_parent"
                android:layout_height="48dip"
                android:background="?attr/more_center_bg"
                android:clickable="true"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dip"
                    android:gravity="center_vertical"
                    android:text="@string/update_name"
                    android:textColor="?attr/item_text_color"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/user_name2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="24dip"
                    android:gravity="center_vertical"
                    android:textColor="?attr/item_text_color" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dip"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/near_right" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/update_sex"
                android:layout_width="match_parent"
                android:layout_height="48dip"
                android:background="?attr/more_down_bg"
                android:clickable="true"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dip"
                    android:gravity="center_vertical"
                    android:text="@string/sex"
                    android:textColor="?attr/item_text_color"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/user_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="24dip"
                    android:gravity="center_vertical"
                    android:textColor="?attr/item_text_color" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dip"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/near_right" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dip"
                android:layout_marginTop="14dip"
                android:background="?attr/more_single_bg"
                android:clickable="true"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/login_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dip"
                    android:gravity="center_vertical"
                    android:textColor="?attr/item_text_color"
                    android:textSize="17sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="24dip"
                    android:gravity="center_vertical"
                    android:text="@string/logined"
                    android:textColor="?attr/item_text_color" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dip"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/near_right" />
            </RelativeLayout>

            <Button
                android:id="@+id/user_logout"
                android:layout_width="match_parent"
                android:layout_height="48dip"
                android:layout_marginTop="60dip"
                android:background="@drawable/red_button_bg"
                android:gravity="center"
                android:text="@string/logout"
                android:textColor="@drawable/text_white_black"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>